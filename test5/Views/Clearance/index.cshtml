@model IEnumerable<test5.Models.Inventory>
@{
    ViewBag.Title = "Clearance Items";
}

<!-- Display general product info here... -->
<div class="product">
    <br />
    <h1> Clearance</h1>
    <li>
        @foreach (var product in Model)
        {
                if (product.discountPrice > 0)
                {
                    <ul>
                        <!-- requirement 3.2.12.3.1 -->
                        <a href="/Home/ProductDetails/@product.itemID">
                            <img src="@product.image" />
                            <p class="prod_desc">@product.description</p>
                            <i style="text-decoration: line-through; margin-right: 1.0em;">$@product.discountPrice USD</i> <!-- requirement 3.2.8.3.1 -->
                            <strong>Now $@product.price USD</strong> <!-- requirement 3.2.8.3.1, 3.4.2 -->
                        </a>
                    </ul>
                }
        }
    </li>
</div>